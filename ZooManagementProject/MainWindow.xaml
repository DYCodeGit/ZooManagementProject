<Window x:Class="ZooManagementProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooManagementProject"
        mc:Ignorable="d"
         DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1" StartPoint="1,1">
                <GradientStop Color="#0b102d" Offset="0"/>
                <GradientStop Color="#000c26" Offset="2"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        
        <Frame
                x:Name="MainFrame"
                Loaded="MainFrame_Loaded"
                NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
